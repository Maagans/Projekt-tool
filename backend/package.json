{
  "name": "projekt-backend",
  "version": "1.0.0",
  "description": "Backend server for the project management tool",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "eslint . --ext js --max-warnings 0",
    "build": "node --check index.js",
    "test": "vitest",
    "test:services": "vitest --run tests/services",
    "test:api": "vitest --run tests/api",
    "migrate": "node-pg-migrate --configFile node-pg-migrate.config.json up",
    "migrate:down": "node-pg-migrate --configFile node-pg-migrate.config.json down",
    "migrate:status": "node-pg-migrate --configFile node-pg-migrate.config.json status",
    "seed:admin": "node ./scripts/seed-admin.js",
    "migrate:create": "node-pg-migrate --configFile node-pg-migrate.config.json create",
    "backup": "node ./scripts/backup-db.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.11.5",
    "pino": "^9.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "pino-pretty": "^10.3.1",
    "supertest": "^7.1.3",
    "vitest": "^1.6.0"
  }
}
