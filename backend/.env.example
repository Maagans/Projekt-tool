# Backend environment variables
DATABASE_URL=postgresql://myuser:mypassword@localhost:5432/projekt-tool
PORT=3001
JWT_SECRET=replace_with_random_secret

CORS_ORIGIN=http://localhost:5173

# Optional: only read when running npm run seed:admin
ADMIN_NAME=
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_FORCE_RESET=true

# Optional: directory for npm run backup (relative til backend/)
PG_BACKUP_DIR=backups
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=5
LOG_LEVEL=info

# Feature flags
RESOURCES_ANALYTICS_ENABLED=false
PROJECT_RISK_ANALYSIS_ENABLED=false

# Networking
# Set to "loopback" to trust only local proxies, a number (e.g. 1) to trust that many hops,
# or a specific IP/CIDR like "10.0.0.0/8". Leave empty/false if running without a proxy.
TRUST_PROXY=loopback

